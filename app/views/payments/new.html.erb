<h1>Payment for <%= @description %>, <%= @transaction.transaction_order_nr %> </h1>
<%= form_tag transaction_payments_path(@transaction) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@transaction.amount) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My StarTrade Order"
    data-email="<%= current_user.email %>"
    data-description="StarTrade <%= @transaction.transaction_order_nr %>"
    data-amount="<%= @transaction.amount_cents %>"
    data-currency="<%= @transaction.amount.currency %>"></script>
<% end %>
