<%= @stockitem.id %>

<%= form_for @bid, url: {action: "create"} do |b| %>
    New bid: <br />
    <%= b.text_field :stockitem_id, required: true %>
    <%= b.text_field :bid_price, required: true, autofocus: true %>
    <%= b.text_field :userbuy_id, required: true %>
    <div class="form-actions">
        <%= b.submit "Next", class: 'knop-1' %>
    </div>
<% end %>

