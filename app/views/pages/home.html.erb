<div id="myCarousel" class="carousel slide" data-ride="carousel">

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag "img36.jpg", alt: "Shoe number 1" %>
      <div class="carousel-caption">
        <p>Air Vapormax Off White 2018</p>
      </div>
    </div>

    <div class="item">
      <%= image_tag "Air-Jordan-1-Retro-High-Satin-Shattered-Backboard-W.png", height: "350", alt: "Air Jordan 1 Retro High Satin Shattered Backboard" %>
      <div class="carousel-caption">
        <p>Air Jordan 1 Retro High Satin Shattered Backboard</p>
      </div>
    </div>

    <div class="item">
      <%= image_tag "air-jordan-11-retro-win-like-96-Product.jpg", height: "350", alt: "air-jordan-11-retro-win-like-96-Product" %>
      <div class="carousel-caption">
        <p>air jordan 11 retro win like 96</p>
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
