<div class="development">
  developer info: <br />
  current_user: <%= current_user.email  %>
</div>

<%= form_for @stockitem, url: {action: "create"} do |b| %>
    <label>Sales Price: <br />
      <%= b.number_field :sell_price , min: 1, max: 100000, required: true, autofocus: false, placeholder: 'Euro' %>
    </label>
    <%= b.collection_select :catalogitem_id, Catalogitem.all, :id, :description, include_blank: false %>
    <label>Shoesize (<%= @region %>) :
      <select id="selectShoesize">
        <% @shoesizes.each_with_index do |s, i| %>
          <option value="<%= i %>"><%= s %></option>
        <% end %>
      </select>
      <div id="internal_size">
        <input onkeydown="return false", placeholder="select size" required>
      </div>
    </label>

    <div class="form-actions">
        <%= b.submit "Sell!", class: 'knop-1' %>
    </div>
<% end %>
